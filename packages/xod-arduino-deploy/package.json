    "fs-extra": "^4.0.2",
    "node-fetch": "^1.7.1",
    "ramda": "^0.24.1",
    "serialport": "^6.0.0",
    "tar": "^3.1.8",
    "unbzip2-stream": "^1.2.5",
    "xod-fs": "^0.17.0",
